<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>商店测试结果</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
  <h1>商店测试结果</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">PyPI 项目名</th>
        <th scope="col">包名</th>
        <th scope="col">加载结果</th>
        <th scope="col">验证结果</th>
        <th scope="col">加载日志</th>
        <th scope="col">验证消息</th>
        <th scope="col">插件元数据</th>
      </tr>
    </thead>
    <tbody>
      {% for result in results %}
      {% set project_link = result['previous']['project_link'] %}
      <tr>
        <td>{{ project_link }}</td>
        <td>{{ result['previous']['module_name'] }}</td>
        <td>{{ result['run'] }}</td>
        <td>{{ result['valid'] }}</td>
        <td>
          <button class="btn btn-link" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#{{ project_link }}-output" aria-controls="offcanvasBottom">显示</button>
        </td>
        <div class="offcanvas offcanvas-bottom" tabindex="-1" id="{{ project_link }}-output">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasBottomLabel">{{ project_link }} 加载日志</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
          </div>
          <div class="offcanvas-body small">
            {{ result['output'] }}
          </div>
        </div>
        <td>
          <button class="btn btn-link" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#{{ project_link }}-validation" aria-controls="offcanvasBottom">显示</button>
        </td>
        <div class="offcanvas offcanvas-bottom" tabindex="-1" id="{{ project_link }}-validation">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasBottomLabel">{{ project_link }} 验证消息</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
          </div>
          <div class="offcanvas-body small">
            {{ result['validation_message'] }}
          </div>
        </div>
        <td>
          <button class="btn btn-link" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#{{ project_link }}-metadata" aria-controls="offcanvasBottom">显示</button>
        </td>
        <div class="offcanvas offcanvas-bottom" tabindex="-1" id="{{ project_link }}-metadata">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasBottomLabel">{{ project_link }} 插件元数据</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
          </div>
          <div class="offcanvas-body small">
            {{ result['metadata'] }}
          </div>
        </div>
      </tr>
      {% endfor %}
    </tbody>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</html>
